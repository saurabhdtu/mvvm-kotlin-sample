<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="formItem"
            type="com.locus.assignment.models.entities.FormListItem" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        app:cardBackgroundColor="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/card_padding"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="@{formItem.enabled}"
                android:text="@{formItem.title}"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minLines="3"
                android:hint="Write your comments"
                android:gravity="start"
                android:visibility="@{formItem.enabled?View.VISIBLE:View.GONE}"
                android:inputType="textCapSentences|textMultiLine"
                app:layout_constraintTop_toBottomOf="@id/switch_form" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
